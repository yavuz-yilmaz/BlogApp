@model Post
@{
    ViewData["Title"] = Model.Title;
}
<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">@Model.Title</h1>
            <div class="tags">
                @await Html.PartialAsync("_PostTags", Model.Tags)
            </div>
            <img src="~/img/@Model.Image" class="img-fluid rounded" alt="">
            <ul class="list-inline my-3">
                <li class="list-inline-item"><i class="bi bi-calendar"></i> @Model.PublishedOn.ToString("d")</li>
                <li class="list-inline-item"><i class="bi bi-person-circle"></i> <a href="/profile/@Model.User.UserName">@Model.User.Name</a></li>
            </ul>
            <hr class="py-3">
            <div>@Html.Raw(@Model.Content)</div>
        </div>

        <div class="bg-white mt-3">
            <div class="card border-0">
                <div class="card-header pb-0">
                    <h4><span id="commentCount">@Model.Comments.Count()</span> adet yorum</h4>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("_PostComments", Model)
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <vc:tags-menu></vc:tags-menu>
        <vc:new-posts></vc:new-posts>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#commentForm").submit(function (e) {
                e.preventDefault();
                
                var token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("AddComment")',
                    dataType: 'json',
                    data: {
                        __RequestVerificationToken: token,
                        PostId: $('#PostId').val(),
                        Text: $('#Text').val(),
                    },
                    success: function (yorum) {
                        var date = new Date(yorum.publishedOn);

                        $("#comments").append(`
                            <div class="my-4 d-flex">
                                <img src="/img/${yorum.avatar}" alt="" class="avatar rounded-circle float-start me-3">
                                <div>
                                    <div class="mb-2 d-flex">
                                        <h6 class="me-2"><a href="/profile/${yorum.username}">${yorum.fullname}</a></h6>
                                        <small>${date.toLocaleDateString()}</small>
                                    </div>
                                    <p>${yorum.text}</p>
                                </div>
                            </div>
                        `);
                        
                        $("#Text").val('');
                        
                        var adet = parseInt($("#commentCount").text());
                        $("#commentCount").text(adet + 1);
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        console.error("Error adding comment: ", textStatus, errorThrown);
                        alert("There was an error adding your comment. Please try again.");
                    }
                });
            });
        });
    </script>
}
