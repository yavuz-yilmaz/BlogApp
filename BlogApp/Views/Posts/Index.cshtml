@{
    ViewData["Title"] = "Yazılar";
}

@model PostsViewModel

<div class="row">
    @if (TempData["WelcomeMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["WelcomeMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">Popüler Yazılar</h1>
            @foreach (var post in Model.Posts)
            {
                <div class="card bg-transparent border-0 mb-3">
                    <div class="row">
                        <div class="col-4">
                            <img src="~/img/@post.Image" class="img-fluid rounded" alt="">
                        </div>
                        <div class="col-8">
                            <h5><a href="/posts/details/@post.Url" class="btn-link fw-bold">@post.Title</a>
                            </h5>
                            <p>@post.Description</p>
                        </div>
                    </div>
                </div>
                <hr class="my-3">
            }
        </div>
    </div>
    <div class="col-lg-4">
        <vc:tags-menu></vc:tags-menu>
        <vc:new-posts></vc:new-posts>
    </div>
</div>
