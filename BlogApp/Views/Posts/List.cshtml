@{
    ViewData["Title"] = "Yazı Listesi";
}
@model List<Post>

<div class="row">
    <div class="col-12">
        <h2>Yazı Listesi</h2>
        <a href="/Posts/Create" class="btn btn-primary">Yeni Yazı</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th style="width: 200px;">Resim</th>
                    <th>Başlık</th>
                    <th>Aktif</th>
                    <th style="width: 125px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="/img/@item.Image" class="img-fluid" alt="" /></td>
                        <td>@item.Title</td>
                        <td>@item.IsActive</td>
                        <td>
                            <a href="/Posts/Edit/@item.PostId" class="btn btn-sm btn-primary">Düzenle</a>
                            <a href="/Posts/Delete/@item.PostId" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
